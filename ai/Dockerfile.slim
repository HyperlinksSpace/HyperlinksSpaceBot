# Slim image: no Ollama, for server with OPENAI_SWITCH=1 and OLLAMA_SWITCH=0.
# Use: docker build -f ai/Dockerfile.slim -t ai-slim ./ai
FROM python:3.11-slim

WORKDIR /app

# Copy requirements and install dependencies
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copy backend code
COPY backend/ ./backend/

# Copy start script
COPY start.sh ./
RUN sed -i 's/\r$//' start.sh && chmod +x start.sh

EXPOSE 8000

CMD ["./start.sh"]
